@page
@model HotelApp.Web.Pages.BookRoomModel
@{
}

<h1>Book A Room</h1>
<br/>

<h2>@Model.RoomType.Title</h2>
<p>@Model.RoomType.Description</p>
<br />

<form method="post"> 
    <div class="form-group">
        <label asp-for="@Model.FirstName"></label>
        <input type="text" asp-for="@Model.FirstName" />
    </div>
    <br/>
    <div class="form-group">
        <label asp-for="@Model.LastName"></label>
        <input type="text" asp-for="@Model.LastName" />
    </div>
    <br/>
    <div>
        <button type="submit" class="btn btn-primary">Book Date and Room</button>
    </div>
</form>